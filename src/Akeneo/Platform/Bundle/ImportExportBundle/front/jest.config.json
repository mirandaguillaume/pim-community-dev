{
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/**/index.ts"
  ],
  "coverageReporters": [
    "text-summary",
    "html"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "functions": 80,
      "lines": 80
    }
  },
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect",
    "<rootDir>/src/setupTests.ts"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleNameMapper": {
    "\\.(svg|css)$": "<rootDir>/src/__mocks__/fileMock.ts"
  }
}
